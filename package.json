{
  "name": "@nsw/hospital_management",
  "version": "1.0.0",
  "description": "Hospital Management Server",
  "private": true,
  "author": {
    "name": "Nay Soewin",
    "email": "naysoewin9@gmail.com"
  },
  "scripts": {
    "serve": "nodemon dist/src/server.js",
    "tsc:watch": "tsc -w",
    "predev": "rimraf dist && yarn build",
    "dev": "NODE_ENV=development concurrently -k -p \"[{name}]\" -n \"tsc,nodemon\" -c \"cyan.bold,green.bold\" \"yarn tsc:watch\" \"yarn serve\"",
    "build": "tsc",
    "pretest": "NODE_ENV=test dotenv -e .env.test -- prisma db push",
    "test": "NODE_ENV=test dotenv -e .env.test -- jest",
    "prestart": "rimraf dist && tsc",
    "start": "NODE_ENV=production node dist/src/server.js"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seeds/index.ts"
  },
  "dependencies": {
    "@types/bcrypt": "^5.0.0",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.20.0",
    "bson": "^4.7.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "date-fns": "^2.29.3",
    "dotenv": "^16.0.3",
    "dotenv-cli": "^6.0.0",
    "errorhandler": "^1.5.1",
    "express": "^4.18.1",
    "express-rate-limit": "^6.4.0",
    "helmet": "^5.1.0",
    "http-errors": "^2.0.0",
    "joi": "^17.6.0",
    "jose": "^4.8.1",
    "jsonwebtoken": "^8.5.1",
    "jwt-decode": "^3.1.2",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "supertest": "^6.2.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.1.0",
    "@prisma/client": "^3.14.0",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/errorhandler": "^1.5.0",
    "@types/express": "^4.17.13",
    "@types/http-errors": "^1.8.2",
    "@types/jest": "^29.1.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/morgan": "^1.9.3",
    "@types/passport": "^1.0.8",
    "@types/passport-jwt": "^3.0.6",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "concurrently": "^7.2.1",
    "eslint": "^8.17.0",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "lint-staged": "^13.0.0",
    "nodemon": "^2.0.16",
    "prettier": "^2.7.1",
    "prisma": "^3.14.0",
    "ts-jest": "^28.0.3",
    "ts-node": "^10.8.0",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.7.2"
  },
  "lint-staged": {
    "*.ts": [],
    "*.js": "eslint --cache --fix"
  }
}
