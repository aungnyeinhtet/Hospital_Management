// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime
  updatedAt DateTime
}

model Hospital {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime
  updatedAt DateTime
}

model Doctor {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime
  updatedAt DateTime
}

model Appointment {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime
  updatedAt DateTime
}

model Patient {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime
  updatedAt DateTime
}
